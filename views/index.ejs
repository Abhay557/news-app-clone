<%- include('layout', { body: `
    <section>
      <form method="get">
        <label for="topic">Select Topic:</label>
        <select name="country" id="country" onchange="this.form.submit()">
          <option value="politics" <%= country === 'politics' ? 'selected' : '' %>>politics</option>
          <option value="sports" <%= country === 'sports' ? 'selected' : '' %>>sports</option>
          <option value="market" <%= country === 'market ? 'selected' : '' %>>market</option>
        </select>
      </form>
      
      <h2>Top Headlines</h2>
      <ul>
        <% articles.forEach(article => { %>
          <li>
            <h3><a href="<%= article.url %>" target="_blank"><%= article.title %></a></h3>
            <p><%= article.description || 'No description available' %></p>
          </li>
        <% }); %>
      </ul>
    </section>
    ` }) %>
    